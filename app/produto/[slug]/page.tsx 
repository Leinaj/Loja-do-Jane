import Image from "next/image";
import Link from "next/link";
import { notFound } from "next/navigation";
import type { Metadata } from "next";
import { products, formatBRL } from "@/lib/products";

type Props = { params: { slug: string } };

export async function generateStaticParams() {
  return Object.values(products).map((p) => ({ slug: p.slug }));
}

export async function generateMetadata({ params }: Props): Promise<Metadata> {
  const p = products[params.slug];
  if (!p) return {};
  return {
    title: p.title,
    description: p.description ?? `Compre ${p.title} por ${formatBRL(p.price)}.`,
  };
}

export default function ProdutoPage({ params }: Props) {
  const p = products[params.slug];
  if (!p) notFound();

  const msg =
    `Olá! Quero finalizar a compra:%0A` +
    `- Produto: ${p.title}%0A` +
    `- Preço: ${formatBRL(p.price)}%0A` +
    `- Link: ${typeof window !== "undefined" ? window.location.href : ""}`;
  const wa = `https://wa.me/5544988606483?text=${msg}`;

  return (
    <main className="mx-auto max-w-5xl px-4 py-8">
      <div className="grid grid-cols-1 gap-8 sm:grid-cols-2">
        <div className="overflow-hidden rounded-2xl border border-zinc-800">
          <Image
            src={p.image}
            alt={p.title}
            width={1200}
            height={900}
            sizes="(max-width: 640px) 100vw, 600px"
            className="aspect-[4/3] h-auto w-full object-cover"
            priority
          />
        </div>

        <section>
          <h1 className="text-3xl font-bold">{p.title}</h1>
          <p className="mt-2 text-emerald-400 text-2xl font-semibold">
            {formatBRL(p.price)}
          </p>
          {p.description ? (
            <p className="mt-4 text-zinc-300">{p.description}</p>
          ) : null}

          <div className="mt-6 flex flex-wrap gap-3">
            <a
              href={wa}
              target="_blank"
              rel="noopener noreferrer"
              className="rounded-xl border border-emerald-600 bg-emerald-700/20 px-5 py-3 font-semibold text-emerald-400 hover:bg-emerald-700/30"
            >
              Finalizar no WhatsApp
            </a>
            <Link
              href="/catalogo"
              className="rounded-xl border border-zinc-700 px-5 py-3 font-medium hover:bg-zinc-900"
            >
              Voltar ao Catálogo
            </Link>
          </div>
        </section>
      </div>
    </main>
  );
}